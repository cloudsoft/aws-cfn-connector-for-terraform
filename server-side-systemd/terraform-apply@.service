[Unit]
Description=detached "terraform apply" instance for Cloudsoft::Terraform::Infrastructure

[Service]
ExecStart=/usr/bin/env terraform apply -lock=true -no-color -input=false -auto-approve
# NB: The files below must be the same as what the current version of
# the CloudFormation resource provider expects.
StandardOutput=file:%p@%i-stdout-live.log
StandardError=file:%p@%i-stderr-live.log
Restart=no
