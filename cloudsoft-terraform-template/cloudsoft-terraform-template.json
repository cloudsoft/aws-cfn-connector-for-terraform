{
  "typeName": "Cloudsoft::Terraform::Template",
  "description": "A Terraform resource provider for AWS CloudFormation",
  "sourceUrl": "https://cloudsoft.io/",
  "properties": {
    "TFServerName": {
      "description": "Terraform server name (hostname and other connection parameters derive from here)",
      "type": "string"
    },
    "TFInfrastructureName": {
      "description": "Terraform infrastructure name",
      "type": "string"
    },
    "TFConfigurationURL": {
      "description": "URL of a Terraform configuration in Terraform language (not JSON)",
      "type": "string"
    }
  },
  "required": [
    "TFServerName",
    "TFInfrastructureName",
    "TFConfigurationURL"
  ],
  "readOnlyProperties": [
    "/properties/TFServerName",
    "/properties/TFInfrastructureName"
  ],
  "primaryIdentifier": [
    "/properties/TFServerName",
    "/properties/TFInfrastructureName"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "initech:CreateInfrastructure"
      ]
    },
    "read": {
      "permissions": [
        "initech:DescribeInfrastructure"
      ]
    },
    "update": {
      "permissions": [
        "initech:UpdateInfrastructure"
      ]
    },
    "delete": {
      "permissions": [
        "initech:DeleteInfrastructure"
      ]
    },
    "list": {
      "permissions": [
        "initech:ListInfrastructures"
      ]
    }
  }
}
